<!--pages/pay/pay.wxml-->
<view class="container">
<view class="page__hd">
    <view class="page__title">支付费用</view>
  </view>

  <view class="weui-form-preview wrapper">
  <view class="weui-form-preview__hd">
      <view class="weui-form-preview__item">
        <text class="weui-form-preview__label">订单号：</text>
        <text class="weui-form-preview__value">{{orderid}}</text>
      </view>
    </view>

    <view class="weui-form-preview__hd">
      <view class="weui-form-preview__item">
        <text class="weui-form-preview__label">支付金额：</text>
        <text class="weui-form-preview__value">{{cost}}元</text>
      </view>
    </view>

    <view class="weui-form-preview__ft">
        
          <a bindtap="onclick" 
          class="weui-form-preview__btn weui-form-preview__btn_primary">确认支付</a>
      
      </view>
  </view>
</view>
