/**order_list.wxss**/

@import '../../libs/weui.wxss';
.container {
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
} 

.order_wrap {
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  box-shadow: 2px 2px 8px #DDDDDD;
  background: white;
}

.order_item_images {
  width: 45rpx;
  height: 45rpx;
  margin-right: 5rpx;
}

.add-view{
    position: fixed;
    bottom: 5rpx;
    right: 30rpx;
    z-index: 1000;
}
.add-view image{
    width: 110rpx;
    height: 110rpx;
}


.swiper-tab{
	width: 100%;
	text-align: center;
	line-height: 80rpx;
  box-shadow: 1px 1px 3px #CCCCCC;
  background: white;
}

.swiper-tab-list{
  font-size: 35rpx;
  display: inline-block;
	width: 50%;
	color: #777777;
}

.on{
  color: green;
	border-bottom: 5rpx solid green;
}
 
.swiper-box{
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background: #F5F5F5;
}

.accepted {
  color: green;
}

.not_accepted {
  color: red;
}

.under_review {
  color: grey;
}

.content {
  margin-top: 18rpx;
}

.swiper-items {
  height: 100%;
}

.scroll-views {
  height: 100%;
}

.list {
  overflow:auto;
  margin:auto;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}